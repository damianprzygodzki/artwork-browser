<html>
    <head>
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
        <style>
            html, body {
                margin:0;
                padding:0;
                
                background-color: #333;
                color: #fff;
                
                font-family: 'Lato', sans-serif;
            }
            
            .header {
                width: 50%;
                margin: 2rem auto;
                text-align: center;
            }
            
            .gallery {
                margin: 1rem;
            }
            
            .thumb {
                float:left;
                width: calc(20% - 1rem);
                margin:.5rem;
            }
            
            .thumb img {
                width: 100%;
            }
            
            .image {
                position: relative;
                display: inline-block;
                margin: 0 auto;
                text-align: center;
                max-width: 800px;
            }
            
            .image-layer {
                width: 100%;
            }
            
            .tools {
                width: 50%;
                margin: 1rem auto;
                text-align: center;
            }
            
            .tools > * {
                display: inline;
                border: 3px #fff solid;
            }
            
            .tool-layer {
                position: absolute;
                z-index:100;
                width: 100%;
            }
            
            .presentation {
                text-align: center;
            }
            
            a {
                color: #fff;
            }
        </style>
    </head>
    <body>
        <div class="header">
            <h1>Choose artwork</h1>
            <h4><a href="/">Go back</a></h4>
        </div>